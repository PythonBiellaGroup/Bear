  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${cwd}",
        "LOG_VERBOSITY": "DEBUG"
      }
    },
    {
      "name": "Main File",
      "type": "debugpy",
      "request": "launch",
      "program": "app/main.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${cwd}",
        "LOG_VERBOSITY": "DEBUG"
      }
    }
  ]
}